<%- model_class = Active -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Ativos' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Local</th>
      <th>Local de Registro CPD  </th>
      <th>Patrimônio </th>
      <th>Especificação</th>
      <th>Especificação Complementar</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @actives.each do |active| %>
      <tr>
        <td><%= active.local %></td>
        <td><%= active.local_registro_cpd %></td>
        <td><%= active.patri_original %></td>
        <td><%= active.especification %></td>
        <td><%= active.especification_complement %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      active_path(active), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_active_path(active), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      active_path(active),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_active_path,
            :class => 'btn btn-primary' %>
