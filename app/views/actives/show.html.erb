<%- model_class = Active -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:local) %>:</strong></dt>
  <dd><%= @active.local %></dd>
  <dt><strong><%= model_class.human_attribute_name(:local_registro_cpd) %>:</strong></dt>
  <dd><%= @active.local_registro_cpd %></dd>
  <dt><strong><%= model_class.human_attribute_name(:patri_original) %>:</strong></dt>
  <dd><%= @active.patri_original %></dd>
  <dt><strong><%= model_class.human_attribute_name(:especification) %>:</strong></dt>
  <dd><%= @active.especification %></dd>
  <dt><strong><%= model_class.human_attribute_name(:especification_complement) %>:</strong></dt>
  <dd><%= @active.especification_complement %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              actives_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_active_path(@active), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              active_path(@active),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
